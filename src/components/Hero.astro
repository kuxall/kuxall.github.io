---
interface Props {
  name: string;
  tagline: string;
  avatar: string;
}

const { name, tagline, avatar } = Astro.props;
---

<section id="home" class="relative min-h-screen flex items-center justify-center pt-16 overflow-hidden">
  <!-- Terminal Background -->
  <div class="absolute inset-0 bg-[#0a0a0f]">
    <!-- Matrix-style particles -->
    <canvas id="matrix-canvas" class="absolute inset-0 opacity-20"></canvas>
  </div>
  
  <!-- Terminal Container -->
  <div class="container relative z-10 max-w-6xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <!-- Left: Terminal Display -->
      <div class="terminal-window">
        <!-- Terminal Header -->
        <div class="terminal-header">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <div class="text-xs text-cyan-400 font-mono">neural-terminal v2.0.1</div>
        </div>
        
        <!-- Terminal Body -->
        <div class="terminal-body">
          <div class="terminal-line">
            <span class="text-cyan-400">></span> 
            <span class="terminal-text" id="boot-line-1">INITIALIZING NEURAL NETWORK...</span>
          </div>
          <div class="terminal-line">
            <span class="text-green-400">></span> 
            <span class="terminal-text" id="boot-line-2">LOADING ML_ENGINEER.EXE...</span>
          </div>
          <div class="terminal-line">
            <span class="text-purple-400">></span> 
            <span class="terminal-text" id="boot-line-3">SYSTEM READY</span>
          </div>
          <div class="terminal-line mt-4">
            <span class="text-cyan-400">USER:</span> 
            <span class="text-white font-bold text-2xl neon-text">{name.toUpperCase()}</span>
          </div>
          <div class="terminal-line">
            <span class="text-cyan-400">ROLE:</span> 
            <span class="text-purple-400">{tagline}</span>
          </div>
          <div class="terminal-line">
            <span class="text-cyan-400">STATUS:</span> 
            <span class="text-green-400 animate-pulse">● ONLINE</span>
          </div>
          
          <!-- Command Input -->
          <div class="terminal-line mt-6">
            <span class="text-cyan-400">></span> 
            <span id="command-text" class="text-white"></span>
            <span class="animate-pulse text-cyan-400">█</span>
          </div>
          
          <!-- Command Buttons -->
          <div class="flex flex-wrap gap-3 mt-6">
            <a href="#skills" class="btn-cyber text-xs px-4 py-2">
              <span class="font-mono">SKILLS</span>
            </a>
            <a href="#projects" class="btn-cyber text-xs px-4 py-2">
              <span class="font-mono">PROJECTS</span>
            </a>
            <a href="#contact" class="btn-cyber text-xs px-4 py-2">
              <span class="font-mono">CONTACT</span>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Right: Holographic Avatar -->
      <div class="relative flex items-center justify-center">
        <!-- Holographic Frame -->
        <div class="holographic-frame">
          <div class="absolute inset-0 border-2 border-cyan-500/30 rounded-lg"></div>
          <div class="absolute inset-0 border-2 border-cyan-500/20 rounded-lg transform rotate-45"></div>
          
          <!-- Glowing Edges -->
          <div class="absolute top-0 left-0 w-20 h-20 border-t-2 border-l-2 border-cyan-400"></div>
          <div class="absolute top-0 right-0 w-20 h-20 border-t-2 border-r-2 border-purple-400"></div>
          <div class="absolute bottom-0 left-0 w-20 h-20 border-b-2 border-l-2 border-purple-400"></div>
          <div class="absolute bottom-0 right-0 w-20 h-20 border-b-2 border-r-2 border-cyan-400"></div>
          
          <!-- Avatar with Scan Effect -->
          <div class="relative z-10">
            <img
              src={avatar}
              alt={name}
              class="w-64 h-64 lg:w-80 lg:h-80 rounded-lg object-cover relative z-10"
              style="filter: contrast(1.1) saturate(1.2);"
            />
            
            <!-- Scanline Effect -->
            <div class="scanline"></div>
            
            <!-- Hologram Shimmer -->
            <div class="hologram-shimmer"></div>
          </div>
          
          <!-- Data Readout -->
          <div class="absolute -bottom-8 left-0 right-0 text-center">
            <div class="inline-block bg-cyan-500/10 border border-cyan-500/30 rounded px-4 py-2 backdrop-blur-sm">
              <span class="text-cyan-400 text-sm font-mono">ID: ML_ENGINEER_001</span>
            </div>
          </div>
        </div>
        
        <!-- Rotating Rings -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div class="cyber-ring cyber-ring-1"></div>
          <div class="cyber-ring cyber-ring-2"></div>
          <div class="cyber-ring cyber-ring-3"></div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="flex flex-col items-center gap-2 text-cyan-400">
      <span class="text-xs font-mono">SCROLL</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<script>
  // Matrix Rain Effect
  const canvas = document.getElementById('matrix-canvas') as HTMLCanvasElement;
  if (canvas) {
    const ctx = canvas.getContext('2d')!;
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const chars = '01アイウエオカキクケコサシスセソタチツテト';
    const fontSize = 14;
    const columns = canvas.width / fontSize;
    const drops: number[] = Array(Math.floor(columns)).fill(1);

    function drawMatrix() {
      ctx.fillStyle = 'rgba(10, 10, 15, 0.05)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      ctx.fillStyle = 'rgb(0, 255, 255)';
      ctx.font = `${fontSize}px monospace`;

      for (let i = 0; i < drops.length; i++) {
        const text = chars[Math.floor(Math.random() * chars.length)];
        const x = i * fontSize;
        const y = drops[i] * fontSize;

        ctx.fillText(text, x, y);

        if (y > canvas.height && Math.random() > 0.975) {
          drops[i] = 0;
        }
        drops[i]++;
      }
    }

    setInterval(drawMatrix, 35);

    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  }

  // Boot sequence animation
  const bootLines = ['boot-line-1', 'boot-line-2', 'boot-line-3'];
  bootLines.forEach((id, index) => {
    const element = document.getElementById(id);
    if (element) {
      element.style.opacity = '0';
      setTimeout(() => {
        element.style.transition = 'opacity 0.5s';
        element.style.opacity = '1';
      }, index * 600);
    }
  });

  // Typing command animation
  const commands = ['help', 'status', 'skills'];
  let commandIndex = 0;
  let charIndex = 0;
  const commandElement = document.getElementById('command-text');

  function typeCommand() {
    if (!commandElement) return;
    
    const currentCommand = commands[commandIndex];
    
    if (charIndex < currentCommand.length) {
      commandElement.textContent = currentCommand.substring(0, charIndex + 1);
      charIndex++;
      setTimeout(typeCommand, 150);
    } else {
      setTimeout(() => {
        charIndex = 0;
        commandIndex = (commandIndex + 1) % commands.length;
        commandElement.textContent = '';
        setTimeout(typeCommand, 500);
      }, 2000);
    }
  }

  setTimeout(typeCommand, 2000);
</script>

<style>
  .terminal-window {
    background: rgba(10, 10, 15, 0.9);
    border: 2px solid rgba(0, 255, 255, 0.3);
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 
      0 0 20px rgba(0, 255, 255, 0.2),
      inset 0 0 20px rgba(0, 255, 255, 0.05);
  }

  .terminal-header {
    background: rgba(0, 255, 255, 0.1);
    border-bottom: 1px solid rgba(0, 255, 255, 0.3);
    padding: 0.75rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .terminal-body {
    padding: 1.5rem;
    font-family: 'Fira Code', monospace;
    min-height: 300px;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .terminal-text {
    color: rgba(255, 255, 255, 0.9);
  }

  .holographic-frame {
    position: relative;
    width: 280px;
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .holographic-frame {
      width: 350px;
      height: 350px;
    }
  }

  .scanline {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      0deg,
      transparent 0%,
      rgba(0, 255, 255, 0.1) 50%,
      transparent 100%
    );
    height: 100%;
    animation: scanline 4s linear infinite;
    pointer-events: none;
  }

  @keyframes scanline {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }

  .hologram-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(0, 255, 255, 0.1) 50%,
      transparent 70%
    );
    animation: shimmer 3s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  .cyber-ring {
    position: absolute;
    border: 1px solid;
    border-radius: 50%;
    opacity: 0.3;
  }

  .cyber-ring-1 {
    width: 300px;
    height: 300px;
    border-color: rgb(0, 255, 255);
    animation: rotate 20s linear infinite;
  }

  .cyber-ring-2 {
    width: 350px;
    height: 350px;
    border-color: rgb(191, 0, 255);
    animation: rotate 15s linear infinite reverse;
  }

  .cyber-ring-3 {
    width: 400px;
    height: 400px;
    border-color: rgb(255, 0, 255);
    animation: rotate 25s linear infinite;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .btn-cyber {
    background: transparent;
    color: rgb(0, 255, 255);
    border: 1px solid rgb(0, 255, 255);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    transition: all 0.3s;
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
    text-decoration: none;
    display: inline-block;
  }

  .btn-cyber:hover {
    background: rgb(0, 255, 255);
    color: black;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    transform: translateY(-2px);
  }

  @media (prefers-reduced-motion: reduce) {
    .scanline,
    .hologram-shimmer,
    .cyber-ring {
      animation: none;
    }
  }
</style>
