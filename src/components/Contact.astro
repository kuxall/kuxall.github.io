---
interface Props {
  email?: string | null;
  phone?: string | null;
  linkedinUrl?: string | null;
  githubUrl: string;
}

const { email, phone, linkedinUrl, githubUrl } = Astro.props;
---

<section id="contact" class="py-20 bg-[#0a0a0a]">
  <div class="container max-w-6xl mx-auto px-6">
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-white mb-4 flex items-center gap-3">
        <span class="w-2 h-8 bg-green-500 rounded-full"></span>
        Get In Touch
      </h2>
      <p class="text-gray-400 max-w-2xl">
        Have a project in mind or want to collaborate? Feel free to reach out.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="bg-[#111111] border border-white/5 p-8 rounded-2xl">
          <h3 class="text-xl font-bold text-white mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center text-green-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Email</div>
                <a href={`mailto:${email}`} class="text-white hover:text-green-500 transition-colors text-lg">
                  {email}
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center text-green-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Phone</div>
                <a href={`tel:${phone}`} class="text-white hover:text-green-500 transition-colors text-lg">
                  {phone}
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center text-green-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-500 mb-1">Location</div>
                <span class="text-white text-lg">Toronto, ON, Canada</span>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="mt-8 pt-8 border-t border-white/5">
            <div class="text-sm text-gray-500 mb-4">Connect with me</div>
            <div class="flex gap-4">
              <a href={linkedinUrl} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-full text-gray-400 hover:text-white hover:bg-green-600 transition-all duration-300">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
              <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-full text-gray-400 hover:text-white hover:bg-green-600 transition-all duration-300">
                <span class="sr-only">GitHub</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 6.176-1.637 8.519-6.422 8.519-11.487 0-6.627-5.373-12-12-12z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-[#111111] border border-white/5 p-8 rounded-2xl">
        <h3 class="text-xl font-bold text-white mb-6">Send Message</h3>
        <form
          action="https://formspree.io/f/xpwqbzgy"
          method="POST"
          class="space-y-6"
        >
          <div>
            <label for="name" class="block text-sm font-medium text-gray-400 mb-2">
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="w-full bg-white/5 border border-white/10 rounded-lg p-3 text-white focus:border-green-500 focus:ring-1 focus:ring-green-500 outline-none transition-all"
              placeholder="John Doe"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-400 mb-2">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full bg-white/5 border border-white/10 rounded-lg p-3 text-white focus:border-green-500 focus:ring-1 focus:ring-green-500 outline-none transition-all"
              placeholder="john@example.com"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-400 mb-2">
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              required
              class="w-full bg-white/5 border border-white/10 rounded-lg p-3 text-white focus:border-green-500 focus:ring-1 focus:ring-green-500 outline-none transition-all"
              placeholder="Your message..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors shadow-lg shadow-green-900/20"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
