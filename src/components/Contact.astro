---
interface Props {
  email?: string | null;
  phone?: string | null;
  linkedinUrl?: string | null;
  githubUrl: string;
}

const { email, phone, linkedinUrl, githubUrl } = Astro.props;
---

<section id="contact" class="section relative overflow-hidden bg-[#050508]">
  <div class="container relative z-10">
    <div class="text-center mb-16">
      <div class="inline-block mb-4">
        <span class="badge badge-primary">
          <span class="animate-pulse mr-2">‚óè</span>
          SECURE_CHANNEL
        </span>
      </div>
      <h2 class="section-title">
        <span class="neon-text-purple">INITIATE_CONTACT</span>
      </h2>
      <p class="text-gray-400 font-mono max-w-2xl mx-auto">
        > ESTABLISHING ENCRYPTED CONNECTION...
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-gray-900/50 border border-gray-800 p-6 rounded-lg backdrop-blur-sm">
            <h3 class="text-xl font-bold text-white font-orbitron mb-6 flex items-center gap-2">
              <span class="text-cyan-500">>></span> TRANSMISSION_DATA
            </h3>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-gray-800 rounded flex items-center justify-center text-cyan-400 border border-gray-700 group-hover:border-cyan-500/50 transition-colors">
                  üìß
                </div>
                <div>
                  <div class="text-xs font-mono text-gray-500 mb-1">EMAIL_ADDRESS</div>
                  <a href={`mailto:${email}`} class="text-white hover:text-cyan-400 transition-colors font-mono">
                    {email}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-gray-800 rounded flex items-center justify-center text-purple-400 border border-gray-700 group-hover:border-purple-500/50 transition-colors">
                  üì±
                </div>
                <div>
                  <div class="text-xs font-mono text-gray-500 mb-1">COMM_LINK</div>
                  <a href={`tel:${phone}`} class="text-white hover:text-purple-400 transition-colors font-mono">
                    {phone}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-gray-800 rounded flex items-center justify-center text-green-400 border border-gray-700 group-hover:border-green-500/50 transition-colors">
                  üìç
                </div>
                <div>
                  <div class="text-xs font-mono text-gray-500 mb-1">COORDINATES</div>
                  <span class="text-white font-mono">Toronto, ON, Canada</span>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="mt-8 pt-6 border-t border-gray-800">
              <div class="text-xs font-mono text-gray-500 mb-4">SOCIAL_PROTOCOLS</div>
              <div class="flex gap-4">
                <a href={linkedinUrl} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded flex items-center justify-center text-gray-400 hover:text-white hover:bg-blue-600 transition-all duration-300">
                  <span class="sr-only">LinkedIn</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                </a>
                <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded flex items-center justify-center text-gray-400 hover:text-white hover:bg-gray-700 transition-all duration-300">
                  <span class="sr-only">GitHub</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 6.176-1.637 8.519-6.422 8.519-11.487 0-6.627-5.373-12-12-12z"/></svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-gray-900/50 border border-gray-800 p-8 rounded-lg backdrop-blur-sm relative overflow-hidden">
          <!-- Form Scanline -->
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-500 via-purple-500 to-cyan-500 animate-gradient"></div>

          <form
            action="https://formspree.io/f/xpwqbzgy"
            method="POST"
            class="space-y-6"
          >
            <div class="group">
              <label for="name" class="block text-xs font-mono text-cyan-400 mb-2">
                > INPUT_NAME
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="w-full bg-black/50 border border-gray-700 rounded p-3 text-white font-mono focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 outline-none transition-all"
                placeholder="John Doe"
              />
            </div>

            <div class="group">
              <label for="email" class="block text-xs font-mono text-cyan-400 mb-2">
                > INPUT_EMAIL
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="w-full bg-black/50 border border-gray-700 rounded p-3 text-white font-mono focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 outline-none transition-all"
                placeholder="john@example.com"
              />
            </div>

            <div class="group">
              <label for="message" class="block text-xs font-mono text-cyan-400 mb-2">
                > INPUT_MESSAGE
              </label>
              <textarea
                name="message"
                id="message"
                rows="4"
                required
                class="w-full bg-black/50 border border-gray-700 rounded p-3 text-white font-mono focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 outline-none transition-all"
                placeholder="Enter transmission content..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full btn-cyber flex items-center justify-center gap-2 group"
            >
              <span>SEND_TRANSMISSION</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
