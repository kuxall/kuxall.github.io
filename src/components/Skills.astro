---

<section id="skills" class="section relative overflow-hidden bg-[#0a0a0f]">
  <!-- Neural Background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-cyan-500/20 via-transparent to-transparent"></div>
  </div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-block mb-4">
        <span class="badge badge-primary">
          <span class="animate-pulse mr-2">‚óè</span>
          NEURAL_CAPABILITIES
        </span>
      </div>
      <h2 class="section-title">
        <span class="neon-text">SKILL_MATRIX</span>
      </h2>
      <p class="text-gray-400 font-mono max-w-2xl mx-auto">
        > ANALYZING TECHNICAL COMPETENCIES...
      </p>
    </div>

    <div class="max-w-6xl mx-auto space-y-8">
      {Object.entries(skillsData).map(([category, data], index) => (
        <div class={`group relative reveal stagger-${(index % 6) + 1}`}>
          <!-- Terminal Window -->
          <div class="relative bg-[#0c0c0c] border border-gray-800 rounded-lg overflow-hidden hover:border-cyan-500/50 transition-all duration-300 shadow-2xl font-mono group-hover:shadow-[0_0_30px_rgba(0,255,255,0.1)] h-full">
            
            <!-- Terminal Header -->
            <div class="bg-[#1a1a1a] px-4 py-2 flex items-center justify-between border-b border-gray-800">
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
              </div>
              <div class="text-xs text-gray-500 font-mono">root@portfolio:~/skills</div>
              <div class="w-12"></div>
            </div>

            <!-- Terminal Body -->
            <div class="p-6 space-y-4">
              <!-- Command Input -->
              <div class="flex items-center gap-2 text-sm">
                <span class="text-green-500">‚ûú</span>
                <span class="text-cyan-500">~</span>
                <span class="text-gray-300">cat</span>
                <span class="text-yellow-300">{category.toLowerCase().replace(/[^a-z0-9]/g, '_')}.json</span>
              </div>

              <!-- JSON Output -->
              <div class="font-mono text-sm leading-relaxed">
                <div class="text-yellow-500">{`{`}</div>
                <div class="pl-4">
                  <span class="text-purple-400">"category"</span>: <span class="text-green-300">"{category}"</span>,
                </div>
                <div class="pl-4">
                  <span class="text-purple-400">"icon"</span>: <span class="text-orange-300">"{data.icon}"</span>,
                </div>
                <div class="pl-4">
                  <span class="text-purple-400">"skills"</span>: [
                </div>
                <div class="pl-8 flex flex-wrap gap-x-2 gap-y-1">
                  {data.skills.map((skill, i) => (
                    <span>
                      <span class="text-cyan-300">"{skill}"</span>
                      {i < data.skills.length - 1 && <span class="text-gray-500">,</span>}
                    </span>
                  ))}
                </div>
                <div class="pl-4">]</div>
                <div class="text-yellow-500">{`}`}</div>
              </div>

              <!-- Blinking Cursor -->
              <div class="flex items-center gap-2 text-sm mt-2">
                <span class="text-green-500">‚ûú</span>
                <span class="text-cyan-500">~</span>
                <span class="w-2 h-4 bg-gray-500 animate-pulse"></span>
              </div>
            </div>

            <!-- Scanline Overlay -->
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-white/5 to-transparent translate-y-[-100%] group-hover:translate-y-[100%] transition-transform duration-1000 pointer-events-none mix-blend-overlay"></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { observeElements } from '../lib/animations';

  // Initialize scroll reveal animations
  observeElements('.reveal', (entry) => {
    entry.target.classList.add('active');
  });
</script>
