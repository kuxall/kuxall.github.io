---
interface EducationItem {
  degree: string;
  institution: string;
  period: string;
  field?: string;
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;
---

<section id="education" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container">
    <h2 class="section-title">Education</h2>
    
    <div class="max-w-4xl mx-auto space-y-4">
      {education.map((edu) => (
        <div class="card p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between">
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                {edu.degree}
              </h3>
              <p class="text-lg text-primary-600 dark:text-primary-400 font-semibold mb-1">
                {edu.institution}
              </p>
              {edu.field && (
                <p class="text-gray-600 dark:text-gray-400">
                  {edu.field}
                </p>
              )}
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400 mt-2 md:mt-0 md:text-right">
              <p class="font-medium">{edu.period}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
