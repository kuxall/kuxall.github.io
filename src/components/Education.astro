---
interface EducationItem {
  degree: string;
  institution: string;
  period: string;
  field?: string;
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;
---

<section id="education" class="py-20 bg-[#0a0a0a]">
  <div class="container max-w-4xl mx-auto px-6">
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-white mb-4 flex items-center gap-3">
        <span class="w-2 h-8 bg-green-500 rounded-full"></span>
        Education
      </h2>
    </div>

    <div class="relative space-y-12">
      <!-- Vertical Timeline Line -->
      <div class="absolute left-0 top-2 bottom-0 w-px bg-white/10 md:left-[8.5rem]"></div>

      {education.map((edu, index) => (
        <div class="relative pl-8 md:pl-48 group">
          <!-- Timeline Dot -->
          <div class="absolute left-[-4px] top-2 w-2.5 h-2.5 rounded-full bg-green-500 ring-4 ring-[#0a0a0a] md:left-[8.4rem] group-hover:scale-125 transition-transform duration-300"></div>
          
          <!-- Date (Desktop) -->
          <div class="md:absolute md:left-0 md:top-0 md:w-28 md:text-right mb-2 md:mb-0">
            <span class="text-sm font-medium text-green-500 font-mono tracking-tight">
              {edu.period}
            </span>
          </div>

          <!-- Content -->
          <div class="bg-[#111111] p-6 rounded-2xl border border-white/5 hover:border-green-500/30 transition-colors duration-300">
            <div class="flex flex-wrap justify-between items-start gap-4 mb-2">
              <div>
                <h3 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">
                  {edu.degree}
                </h3>
                <div class="text-gray-400 font-medium mt-1">
                  {edu.institution}
                </div>
              </div>
            </div>
            
            {edu.field && (
              <div class="text-sm text-gray-500 mt-2">
                Field: <span class="text-gray-300">{edu.field}</span>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
