---
interface Props {
  yearsOfExperience?: number;
  projectsCompleted?: number;
  technologiesUsed?: number;
  githubStars?: number;
}

const {
  yearsOfExperience = 4,
  projectsCompleted = 20,
  technologiesUsed = 30,
  githubStars = 50
} = Astro.props;

const stats = [
  {
    value: yearsOfExperience,
    suffix: '+',
    label: 'EXPERIENCE_YRS',
    icon: '‚ö°',
    color: 'text-cyan-400',
    border: 'border-cyan-500/50'
  },
  {
    value: projectsCompleted,
    suffix: '+',
    label: 'PROJECTS_DEPLOYED',
    icon: 'üöÄ',
    color: 'text-purple-400',
    border: 'border-purple-500/50'
  },
  {
    value: technologiesUsed,
    suffix: '+',
    label: 'TECH_STACK_SIZE',
    icon: 'üíæ',
    color: 'text-pink-400',
    border: 'border-pink-500/50'
  },
  {
    value: githubStars,
    suffix: '+',
    label: 'COMMUNITY_STARS',
    icon: '‚≠ê',
    color: 'text-green-400',
    border: 'border-green-500/50'
  }
];
---

<section class="relative py-12 border-y border-gray-800 bg-[#0a0a0f]/80 backdrop-blur">
  <!-- Grid Background -->
  <div class="absolute inset-0 opacity-10" 
       style="background-image: linear-gradient(rgba(0, 255, 255, 0.3) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.3) 1px, transparent 1px); background-size: 40px 40px;">
  </div>

  <div class="container relative z-10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      
      <!-- System Status Label -->
      <div class="hidden md:block">
        <div class="text-xs font-mono text-gray-500 mb-1">SYSTEM_METRICS</div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-green-400 font-mono text-sm">OPTIMAL</span>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 w-full md:w-auto">
        {stats.map((stat, index) => (
          <div class={`relative group p-4 bg-gray-900/50 border ${stat.border} rounded hover:bg-gray-800/50 transition-all duration-300`}>
            <!-- Corner Accents -->
            <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-white/50"></div>
            <div class="absolute top-0 right-0 w-2 h-2 border-t border-r border-white/50"></div>
            <div class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-white/50"></div>
            <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-white/50"></div>
            
            <div class="flex items-center gap-4">
              <div class={`text-2xl ${stat.color} filter drop-shadow-lg`}>
                {stat.icon}
              </div>
              <div>
                <div class="flex items-baseline gap-1">
                  <span 
                    class={`text-3xl font-bold font-mono ${stat.color} stat-counter`}
                    data-target={stat.value}
                  >
                    0
                  </span>
                  <span class={`text-xl ${stat.color}`}>{stat.suffix}</span>
                </div>
                <div class="text-xs text-gray-400 font-mono mt-1 tracking-wider">
                  {stat.label}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  import { observeElements, animateCounter } from '../lib/animations';

  observeElements('.stat-counter', (entry) => {
    const element = entry.target as HTMLElement;
    const target = parseInt(element.getAttribute('data-target') || '0');
    
    if (element.textContent === '0') {
      animateCounter(element, target, 1500);
    }
  });
</script>
