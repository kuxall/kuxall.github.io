---
interface AwardItem {
  title: string;
  description: string;
  year: string;
}

interface Props {
  awards: AwardItem[];
}

const { awards } = Astro.props;
---

<section id="awards" class="section">
  <div class="container">
    <h2 class="section-title">Awards & Achievements</h2>
    
    <div class="max-w-4xl mx-auto space-y-4">
      {awards.map((award) => (
        <div class="card p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-2">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                  {award.title}
                </h3>
                <span class="text-sm text-gray-500 dark:text-gray-400 font-medium mt-1 md:mt-0">
                  {award.year}
                </span>
              </div>
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                {award.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
