---
interface AwardItem {
  title: string;
  issuer: string;
  date: string;
  description: string;
}

interface Props {
  awards: AwardItem[];
}

const { awards } = Astro.props;
---

<section id="awards" class="section relative overflow-hidden bg-[#050508]">
  <div class="container relative z-10">
    <div class="text-center mb-16">
      <div class="inline-block mb-4">
        <span class="badge badge-primary">
          <span class="animate-pulse mr-2">‚óè</span>
          HALL_OF_FAME
        </span>
      </div>
      <h2 class="section-title">
        <span class="neon-text-purple">ACHIEVEMENTS</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {awards.map((award, index) => (
        <div class={`group relative reveal stagger-${(index % 3) + 1}`}>
          <div class="relative bg-gray-900 border border-gray-800 p-6 rounded-lg hover:border-purple-500/50 transition-all duration-300 h-full flex flex-col">
            <!-- Glow Effect -->
            <div class="absolute inset-0 bg-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"></div>
            
            <div class="relative z-10 flex-1">
              <div class="flex items-start justify-between mb-4">
                <div class="text-3xl filter drop-shadow-[0_0_10px_rgba(191,0,255,0.5)]">
                  üèÜ
                </div>
                <span class="text-xs font-mono text-purple-400 border border-purple-500/20 px-2 py-1 rounded bg-purple-900/10">
                  {award.date}
                </span>
              </div>
              
              <h3 class="text-lg font-bold text-white font-orbitron mb-2 group-hover:text-purple-400 transition-colors">
                {award.title}
              </h3>
              
              <div class="text-sm font-mono text-gray-400 mb-3">
                <span class="text-cyan-500">ISSUER:</span> {award.issuer}
              </div>
              
              <p class="text-gray-400 text-sm leading-relaxed border-t border-gray-800 pt-3">
                {award.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
